<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todolist.EditingTaskPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="TitleTask"></Entry>
            <Editor x:Name="ContentTask"></Editor>
            <Button Clicked="SaveTask" Text="Save"></Button>
            <Button Clicked="RemoveTask" Text="Delete"></Button>
            <Button Clicked="Done" Text="Done"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>